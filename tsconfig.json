{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["ES2022", "dom", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": false,
    "importHelpers": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "declaration": true,
    "incremental": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "rules": {
          "no-invalid-css": "off"
        }
      }
    ]
  },
  "include": ["**/*.ts"]
}
